<h1>Edit <%= @student.name %> </h1>

<% if @student.errors.any? %>   
    <% @student.errors.full_messages.each do |message| %> 
        <h3>Error:<%= message %></h3><br>
    <% end %>
<% end %> 

<%= form_for @student do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.label :mod %>
    <%= f.number_field :mod %> 

    <%= f.submit %> 

<% end %> 